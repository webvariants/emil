mixin emil-navbar(options)
    - options              = options              || {};
    - options['id']        = options.id           || '';
    - options['classes']   = options.classes      || '';
    - options['size']     = options.size        || '';
    .emil-navbar.nav.navbar-header(id='#{options.id}', class='#{options.classes} #{options.size} ', role='navbar')
        block

mixin navbar-header
    .navbar-header
        block

mixin navbar-title
    h4.navbar-title
        block

mixin navbar-brand
    .navbar-brand
        block

mixin navbar-left
    .navbar-left.nav-navbar.nav
        block

mixin navbar-right
    .navbar-right.nav-navbar.nav
        block

mixin navbar-form(options)
    - options              = options              || {};
    - options['id']        = options.id           || '';
    - options['classes']   = options.classes      || '';
    - options['right']     = options.right        || false;
    - options['role']      = options.role         || '';
    - if (options.right) options.classes = options.classes + ' navbar-right ';
    - else options.classes = options.classes + ' navbar-left ';

    form.navbar-form(class=options.classes, role=options.role)
        block

mixin form-group
    .form-group
        block

