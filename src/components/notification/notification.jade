mixin simple-notification(options)
    - options = options || {};
    - options['classes'] = options.classes || NULL;
    div(class="notification simple-notification alert #{options.classes}", role="alert")
        block

mixin button-notification(options)
    - options = options || {};
    - options['classes'] = options.classes || NULL;
    div(class="notification button-notification alert #{options.classes} alert-dismissible", role="alert")
        +button({classes: 'close', data: {dismiss: 'alert'}})
            +icon({hidden: 'true'})
                | &times;
            span.sr-only Close
        block
