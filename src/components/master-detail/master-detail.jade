mixin emil-master(options)
    - options            = options         || {};
    - options['id']      = options.id      || '';
    - options['classes'] = options.classes || '';
    - options['columns'] = options.columns || 'col-md-3 col-sm-10';
    .emil-master(id='#{options.id}', class='#{options.columns} #{options.classes}')
        block

mixin emil-detail(options)
    - options            = options         || {};
    - options['columns'] = options.columns || '';
    - options['classes'] = options.classes || '';
    - options['sidebarAnimation'] = options.sidebarAnimation || 'slideIn';
    .emil-detail.container-fluid(class='#{options.columns} #{options.classes} #{options.sidebarAnimation}')
        block

mixin emil-master-detail(options)
    - options            = options         || {};
    - options['classes']      = options.classes      || '';
    .emil-master-detail(class='#{options.classes} isOpen')
        block

mixin emil-sidebar-btn
     .emil-sidebar-btn
        block

mixin emil-sidebar(options)
    - options            = options         || {};
    - options['id']      = options.id      || '';
    - options['classes'] = options.classes || '';
    - options['columns'] = options.columns || 'col-md-3 col-sm-10';
    .emil-sidebar(id='#{options.id}', class='#{options.columns} #{options.classes}')
        block
